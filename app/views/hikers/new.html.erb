<h1>Hiker Sign Up</h1>

<% if @hiker.errors.any? %>
  <ul>
    <% @hiker.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<br>

<%= form_for @hiker do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %> <br>
  <%= f.label :hometown, :value => "Hometown Zipcode" %>
  <%= f.number_field :hometown %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>

  <%= f.submit "Create Hiker" %>

<% end %>
